generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  name              String?
  username          String?           @unique
  email             String            @unique
  password          String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  points            Int               @default(0)
  submissions       Submission[]
  solvedProblems    SolvedProblem[]
}

model Problem {
  id                  String            @id @default(uuid())
  title               String            @unique
  problemStatement    String
  constraints         String[]
  difficulty          Difficulty
  tags                Tag[]
  testCases           TestCase[]
  solutions           Submission[]
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  points              Int
  solvedBy            SolvedProblem[]
  problemExample      ProblemExample[]
}

model ProblemExample{
  id             String    @id @default(uuid())
  problem        Problem   @relation(fields: [problemId], references: [id])
  problemId      String
  input          String?
  output         String?
  explanation    String?
}

model Submission {
  id             String             @id @default(uuid())
  code           String
  language       Language
  user           User               @relation(fields: [userId], references: [id])
  userId         String
  problem        Problem            @relation(fields: [problemId], references: [id])
  problemId      String
  status         SubmissionStatus
  createdAt      DateTime           @default(now())
}

model TestCase {
  id             String     @id @default(uuid())
  input          String
  output         String
  problem        Problem    @relation(fields: [problemId], references: [id])
  problemId      String
}

model Tag {
    id          String    @id @default(uuid())
    name        String    @unique
    problem     Problem[]
}

model SolvedProblem {
  id        String     @id @default(uuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  problem   Problem    @relation(fields: [problemId], references: [id])
  problemId String
  solvedAt  DateTime   @default(now())
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  CPLUSPLUS
  CSHARP
  RUBY
}

enum SubmissionStatus {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  RUNTIME_ERROR
  COMPILATION_ERROR
}
